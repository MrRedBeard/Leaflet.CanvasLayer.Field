{
    "name": "LeafletCanvasLayerField",
    "version": "2.0.0",
    "description": "A set of layers using canvas to draw ASCIIGrid or GeoTIFF files. This includes a basic raster layer (*ScalaField*) and an animated layer for vector fields, such as wind or currents (*VectorFieldAnim*)",
    "scripts": {
        "build": "npm run build:iife && npm run build:esm && npm run build:umd",
        "build:iife": "rollup -c rollup.config.iife.js",
        "build:esm": "rollup -c rollup.config.esm.js",
        "build:umd": "rollup -c rollup.config.umd.js"
    },
    "type": "module",
    "main": "./dist/leaflet.canvaslayer.field.umd.js",
    "module": "./dist/leaflet.canvaslayer.field.esm.js",
    "style": "./dist/leaflet.canvaslayer.field.css",
    "exports": {
        "import": "./dist/leaflet.canvaslayer.field.esm.js",
        "require": "./dist/leaflet.canvaslayer.field.umd.js",
        "./dist/leaflet.canvaslayer.field.css": "./dist/leaflet.canvaslayer.field.css"
    },
    "directories": {
        "dist": "dist",
        "images": "images",
        "src": "src"
    },
    "file": "dist/leaflet.canvaslayer.field.iife.js",
    "files": [
        "dist/",
        "dist/leaflet.canvaslayer.field.css",
        "leaflet.canvaslayer.field.js",
        "index.html"
    ],
    "sideEffects": false,
    "repository": {
        "type": "git",
        "url": "https://github.com/MrRedBeard/Leaflet.CanvasLayer.Field"
    },
    "keywords": [
        "leaflet",
        "vectorField",
        "wind",
        "currents",
        "animation",
        "raster"
    ],
    "author": {
        "name": "MrRedBeard and Víctor Velarde Gutiérrez",
        "url": "https://github.com/MrRedBeard/"
    },
    "license": "GPL-3.0",
    "homepage": "https://github.com/MrRedBeard/Leaflet.CanvasLayer.Field",
    "bugs": {
        "url": "https://github.com/MrRedBeard/Leaflet.CanvasLayer.Field"
    },
    "dependencies": {
        "@turf/boolean-point-in-polygon": "^7.2.0",
        "d3": "^7.9.0",
        "geotiff": "^2.1.4-beta.0",
        "leaflet": "^1.9.4"
    },
    "devDependencies": {
        "@rollup/plugin-alias": "^5.1.1",
        "@rollup/plugin-commonjs": "^25.0.4",
        "@rollup/plugin-json": "^6.0.0",
        "@rollup/plugin-node-resolve": "^15.2.3",
        "postcss-banner": "^4.0.1",
        "rollup-plugin-node-polyfills": "^0.2.1",
        "rollup-plugin-postcss": "^4.0.2",
        "vite": "^7.0.4"
    }
}
